{% extends 'base.html.twig' %}

{% block body %}
    <h1>Threaddetail</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ threaddetail.id }}</td>
            </tr>
            <tr>
                <th>Threadid</th>
                <td>{{ threaddetail.threadid }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ threaddetail.comment }}</td>
            </tr>
            <tr>
                <th>Writer</th>
                <td>{{ threaddetail.writer }}</td>
            </tr>
            <tr>
                <th>Upvote</th>
                <td>{{ threaddetail.upvote }}</td>
            </tr>
            <tr>
                <th>Downvote</th>
                <td>{{ threaddetail.downvote }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('threaddetail_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('threaddetail_edit', { 'id': threaddetail.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
