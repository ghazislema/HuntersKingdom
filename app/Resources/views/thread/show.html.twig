{% extends 'base.html.twig' %}

{% block body %}
    <h1>Thread</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ thread.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ thread.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ thread.description }}</td>
            </tr>
            <tr>
                <th>Upvote</th>
                <td>{{ thread.upvote }}</td>
            </tr>
            <tr>
                <th>Downvote</th>
                <td>{{ thread.downvote }}</td>
            </tr>
            <tr>
                <th>Isvalidated</th>
                <td>{{ thread.isValidated }}</td>
            </tr>
            <tr>
                <th>Topic</th>
                <td>{{ thread.topic }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('thread_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('thread_edit', { 'id': thread.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
